{
  "name": "@selvklart/onboarding",
  "version": "1.0.0",
  "type": "module",
  "description": "Lightweight onboarding library for Next.js",
  "license": "MIT",
  "author": "Selvklart AS",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/selvklart/onboarding.git"
  },
  "bugs": {
    "url": "https://github.com/selvklart/onboarding/issues"
  },
  "homepage": "https://github.com/selvklart/onboarding#readme",
  "keywords": [
    "onboarding",
    "tour",
    "guide",
    "tutorial",
    "nextjs",
    "react",
    "motion",
    "user-onboarding",
    "product-tour",
    "walkthrough",
    "step-by-step",
    "interactive-guide"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "start": "npm run build && node dist/index.js",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "motion": ">=11",
    "next": ">=14",
    "react": ">=18",
    "react-dom": ">=18"
